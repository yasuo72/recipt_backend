# Port for local development
PORT=5001

# MongoDB connection string (can reuse your existing Atlas cluster)
MONGO_URI=mongodb+srv://USERNAME:PASSWORD@your-cluster.mongodb.net/medassist_receipts

# Gemini API configuration
# Get an API key from https://aistudio.google.com/
GEMINI_API_KEY=your-gemini-api-key-here

# Optional: override model / endpoint; defaults are usually fine
GEMINI_MODEL=gemini-pro
GEMINI_API_URL=https://generativelanguage.googleapis.com/v1beta/models/gemini-pro:generateContent

# Encryption key for stored medical summaries (change to a long random string)
RECEIPT_ENC_KEY=change-me-to-a-strong-random-secret
